<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:gravity="center_vertical" android:start="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/eye_tip_bg_color"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:gravity="left|center_vertical|center_horizontal|center|start" android:start="3dp">
        <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <size android:height="12dp" android:width="12dp"/>
                <solid android:color="@color/eye_tip_bg_color"/>
            </shape>
        </rotate>
    </item>
</layer-list>
