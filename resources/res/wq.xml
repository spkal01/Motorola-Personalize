<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#77ff0000" style="@style/shadowStyle">
    <androidx.cardview.widget.CardView android:id="@+id/card_view" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="0dp" android:layout_alignParentTop="true">
        <ImageView android:layout_gravity="center" android:id="@+id/select_icon" android:visibility="gone" android:layout_width="@dimen/color_option_select_icon_size" android:layout_height="@dimen/color_option_select_icon_size" android:src="@drawable/ic_setting_done"/>
    </androidx.cardview.widget.CardView>
    <TextView android:ellipsize="end" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:includeFontPadding="false" android:layout_below="@+id/card_view"/>
