<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:gravity="center_vertical" android:bottom="@dimen/view_6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/system_accent3_100"/>
            <corners android:radius="@dimen/view_4dp"/>
        </shape>
    </item>
    <item android:gravity="bottom|center_vertical|center_horizontal|center" android:bottom="@dimen/view_3dp">
        <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <size android:height="@dimen/view_12dp" android:width="@dimen/view_12dp"/>
                <solid android:color="@color/system_accent3_100"/>
            </shape>
        </rotate>
    </item>
</layer-list>
